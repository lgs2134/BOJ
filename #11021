import java.util.*;
public class Main{
    public static void main(String[] args){
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
		int[][] test=new int[t][2];
		int[] sum=new int[t];
		for(int i=0;i<test.length;i++) {
			test[i][0]=sc.nextInt();
			test[i][1]=sc.nextInt();
			sum[i]=test[i][0]+test[i][1];
		}
		sc.close();
		for(int i=0;i<sum.length;i++) {
			System.out.println("Case #"+(i+1)+": "+sum[i]);
		}
    }
}
