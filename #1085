import java.util.*;

public class Main {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int x=sc.nextInt();
		int y=sc.nextInt();
		int w=sc.nextInt();
		int h=sc.nextInt();
		
		int[] l= {(w-x),x,(h-y),y};
		
		int answer=Integer.MAX_VALUE;
		
		for(int i=0;i<l.length;i++) {
			if(l[i]<answer) {
				answer=l[i];
			}
		}
		System.out.println(answer);

	}

}
