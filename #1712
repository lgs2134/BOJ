import java.util.*;
public class Main {
	public static void main(String[] args) { 
		Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		int b=sc.nextInt();
		int c=sc.nextInt();
		sc.close();
		int d=-1;
		if(c<=b) {
			System.out.println(d);
		}
		else {
			d=a/(c-b)+1;
			System.out.println(d);
		}
	}
}
